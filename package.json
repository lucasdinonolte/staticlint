{
  "name": "staticlint",
  "version": "1.0.0-rc5",
  "description": "A testing suite for statically generated websites",
  "main": "src/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:lnolte/staticlint.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint"
    }
  },
  "scripts": {
    "cli": "node src/bin.js",
    "lint": "eslint .",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish",
    "create:rule": "node util/createRule.js",
    "ci": "pnpm run lint && pnpm run test && pnpm run coverage"
  },
  "bin": {
    "staticlint": "src/bin.js"
  },
  "author": "Lucas Nolte <hello@lucas-nolte.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.0",
    "cheerio": "^1.0.0-rc.10",
    "debug": "^4.3.4",
    "glob": "^7.2.0",
    "inquirer": "^8.2.4",
    "lodash.groupby": "^4.6.0",
    "lodash.memoize": "^4.1.2",
    "lodash.merge": "^4.6.2",
    "log-update": "^5.0.1",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "c8": "^7.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "prettier": "^2.7.1",
    "vitest": "^0.9.3"
  }
}
